{
  // 
  // 
  // =--- ---= General Settings =--- ---=
  "files.watcherExclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.cache" : true,
  },
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "./.vscode/daisyui.md"
    },
    {
      "file": "./.vscode/project-guide.md"
    },
  ],
  // 
  // 
  // =--- ---= Editor Settings =--- ---=
  "editor.fontFamily": "'Fira Code Nerd Font', 'Jetbrains Mono Nerd Font', 'Hack Nerd Font', 'monospace'",
  "editor.lineHeight": 1.5,
  "editor.smoothScrolling": true,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "terminal.integrated.fontFamily": "'Fira Code Nerd Font', 'Jetbrains Mono Nerd Font', 'Hack Nerd Font', 'monospace'",
  "terminal.integrated.lineHeight": 1.5,
  "workbench.iconTheme": "catppuccin-latte",
  // 
  // 
  // =--- ---= Extensions Settings =--- ---=
  "files.associations": {
    "*.html": "twig"
  },
  "emmet.includeLanguages": {
    "twig": "html"
  },
  "highlight.regexes": {
    "(\\@\\w+)": {
      "filterFileRegex": ".*\\.{|html|tmpl}",
      "decorations": [
        {
          "name": "keyword",
          "fontWeight": "semibold",
          "fontStyle": "italic",
          "match": "\\@\\w+",
          "color": "#ac6848",
        }
      ]
    }
  },
  "cSpell.words": [
    "fasttemplate",
    "fieldset",
    "httprate",
    "multisite",
    "rootscrollgutter",
    "rootscrolllock",
    "tmpl",
    "wispberry"
  ]
}