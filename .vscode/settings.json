{
  // 
  // 
  // =--- ---= General Settings =--- ---=
  "files.watcherExclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.cache" : true,
  },
  "github.copilot.chat.codeGeneration.instructions": [
    // {
    //   "file": "./.vscode/daisyui.md"
    // },
    {
      "file": "./PROJECT_STANDARDS.md"
      
    },
    {
      "text": "only use input or response should NOT BE USED! unless specifically allowed/told, otherwise use `application/x-www-form-urlencoded` for API requests. Validate all incoming data against a defined schema using `go-playground/validator`."
    },
    {
      "text": "make sure not to create unnessary functions when utils already exists make sure to keep the code DRY and avoid code duplication"
    },
  ],
  // 
  // 
  // =--- ---= Editor Settings =--- ---=
  "editor.fontFamily": "'Fira Code Nerd Font', 'Jetbrains Mono Nerd Font', 'Hack Nerd Font', 'monospace'",
  "editor.lineHeight": 1.5,
  "editor.smoothScrolling": true,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "terminal.integrated.fontFamily": "'Fira Code Nerd Font', 'Jetbrains Mono Nerd Font', 'Hack Nerd Font', 'monospace'",
  "terminal.integrated.lineHeight": 1.5,
  "workbench.iconTheme": "catppuccin-latte",
  // 
  // 
  // =--- ---= Extensions Settings =--- ---=
  "files.associations": {
    "*.html": "html"
  },
  "emmet.includeLanguages": {
    "twig": "html"
  },
  "highlight.regexes": {
    "(\\@\\w+)": {
      "filterFileRegex": ".*\\.{|html|tmpl}",
      "decorations": [
        {
          "name": "keyword",
          "fontWeight": "semibold",
          "fontStyle": "italic",
          "match": "\\@\\w+",
          "color": "#ac6848",
        }
      ]
    }
  },
  "cSpell.words": [
    "bluemonday",
    "dedupe",
    "fasttemplate",
    "fieldset",
    "htmltemplate",
    "httprate",
    "jstmpllitinterp",
    "libexec",
    "multisite",
    "rootscrollgutter",
    "rootscrolllock",
    "Stylesheet",
    "texttemplate",
    "tmpl",
    "wispberry",
    "wispytail"
  ]
}